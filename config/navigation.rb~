# Configures your navigation
SimpleNavigation::Configuration.run do |navigation|  
 navigation.items do |primary|
  
 	 primary.item :items, 'Items',items_path  do |sub_nav|
 	 	 sub_nav.item :list, 'Přehled', items_path 
    	sub_nav.item :new, 'Nový', new_item_path
    	sub_nav.item :new, 'Statistika',:controller => 'items', :action => 'statistic'
    	
    end 
    
    primary.item :transports, 'Transports',transports_path  do |sub_nav|
 	 	 sub_nav.item :list, 'Přehled', :controller => 'transports', :action => 'index'
 	 	 sub_nav.item :datsearch, 'Dnes', :controller => 'transports', :action => 'index', :call_when_time1_d => Date.today.strftime("%d.%m.%Y"), :call_when_time2_d => Date.today.strftime("%d.%m.%Y")
 	 	 #sub_nav.item :new, 'Nový', new_transport_path
    	
    	                                                          
    end 
    
 
 end 
  
end